@model List<KidKinder.Entities.Teacher>

@{
    ViewBag.Title = "TeacherList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Öğretmen Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Öğretman Adı</th>
        <th>Alanı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TeacherId</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-primary">Yeni Öğretmen Girişi</a>